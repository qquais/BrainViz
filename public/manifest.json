{
  "manifest_version": 3,
  "name": "EEG TXT Reader",
  "version": "1.0",
  "description": "Read, extract, and visualize EEG signals from .txt or .zip files",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "favicon.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/plotly.min.js",
        "libs/jszip.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
