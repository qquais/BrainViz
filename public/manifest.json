{
  "manifest_version": 3,
  "name": "EEG TXT Reader",
  "version": "1.0",
  "description": "Read, extract, and visualize EEG signals from .txt or .zip files",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/plotly.min.js",
        "libs/jszip.min.js",
        "viewer.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
