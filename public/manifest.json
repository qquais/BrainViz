{
  "manifest_version": 3,
  "name": "BrainViz",
  "version": "1.0.1",
  "description": "Read and visualize EEG signals from .txt and .edf files.",
  "permissions": [
    "storage",
    "downloads",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/plotly.min.js",
        "libs/EdfDecoder.js",
        "libs/jsEDF.js",
        "libs/pyodide.js",
        "libs/pyodide.asm.wasm",
        "libs/python_stdlib.zip",
        "libs/pyodide-lock.json",
        "libs/numpy-1.26.4-cp311-cp311-emscripten_3_1_46_wasm32.whl",
        "libs/scipy-1.11.2-cp311-cp311-emscripten_3_1_46_wasm32.whl",
        "libs/openblas-0.3.23.zip",
        "eegStorage.js",
        "viewer.html",
        "about.html",
        "scriptInjector.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "EEG Reader"
  },
  "icons": {
    "16": "icons/Brainviz16.png",
    "48": "icons/Brainviz48.png",
    "128": "icons/Brainviz128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
